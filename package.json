{
  "name": "node-api-mvc",
  "version": "1.0.0",
  "description": "API Node.js MVC con almacenamiento en memoria",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "test": "jest --runInBand"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "rotating-file-stream": "^3.2.7"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true
  }
}
